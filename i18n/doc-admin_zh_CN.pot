"linux:/opt/otrs/var/cron# ls\n"
"aaa_base                generic_agent-database.dist  rebuild_ticket_index\n"
"aaa_base.dist           generic_agent.dist           rebuild_ticket_index.dist\n"
"cache                   pending_jobs                 session\n"
